targets=(
    "fedora-32"
)
pkgname="teiler"
pkgver="3.1.2"
pkgrel="1"
pkgdesc="A simple screenshot/screencast tool written in bash"
pkgdesclong=(
    "A simple screenshot/screencast tool written in bash"
)
maintainer="HeyLazySunnyKid"
arch="all"
license=("GPL")
depends=(
    "ffmpeg"
    "maim"
    "slop"
    "xclip"
    "xininfo"
    "rofi"
    "diffutils"
)
optdepends=(
    "imgurbash2"
    "openssh"
    "copyq"
    "libnotify"
    "fb-client"
)
url="https://github.com/carnager/teiler"
section="utils"
sources=(
    "${url}/archive/${pkgver}.tar.gz"
)
hashsums=(
    "SKIP"
)

build() {
}

package() {
    cd "teiler-${pkgver}"
    make DESTDIR="${pkgdir}/" \
       PREFIX='/usr' \
       install
}
